/*
 * -------------------------------------------------
 *  Nextflow config file for ii2 IMPIMBA
 * -------------------------------------------------
 */

singularity {
  enabled = true
}


process {
    executor = 'slurm'
    clusterOptions = '--qos=short'
}

params {
  
  // saveReference = true
  // Max resources requested by a normal node on milou. If you need more memory, run on a fat node using:
  //   --clusterOptions "-C mem512GB" --max_memory "512GB"
  
  max_memory = 128.GB
  max_cpus = 32
  max_time = 48.h
  
}
